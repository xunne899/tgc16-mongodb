{{#extends "base"}}

{{#block "content"}}
<h1>Edit food: {{food.name}}</h1>
<form method="POST">
    <div>
        <label>Food Name:</label>
        <input type="text" class="form-control" id="name" name="foodName" value="{{food.name}}">
    </div>
    <div>
        <label>Calories</label>
        <input type="text" class="form-control" id="calories" name="calories" value="{{food.calories}}">
    </div>
    <div class="row">
        <label class="col-1">Tags</label>
        <div class="col">
            <div class="form-check form-check-inline">
                <input name="tags" class="form-check-input" 
                      type="checkbox" 
                      value="sweet"
                {{#inArray food.tags "sweet"}}checked{{/inArray}}
                />
                <label class="form-check-label">Sweet</label>
            </div>
         
            <div class="form-check form-check-inline">
                <input name="tags" class="form-check-input"
                       type="checkbox" 
                       value="organic"
                {{#inArray food.tags "organic"}}checked{{/inArray}}
                />
                <label class="form-check-label">Organic</label>
            </div>
       
            <div class="form-check form-check-inline">
                <input name="tags" class="form-check-input" 
                                   type="checkbox"
                                   value="snack"
                   {{#inArray food.tags "snack"}}checked{{/inArray}}
                />
                <label class="form-check-label">Snack</label>
           </div>
          
            <div class="form-check form-check-inline">
                <input name="tags" class="form-check-input"
                       type="checkbox" value="homecooked"
                    {{#inArray food.tags "homecooked"}}checked{{/inArray}}
                         
                />
                <label class="form-check-label">Homecooked</label>
            </div>
        
        </div>
    </div>
    <input type="submit" value="Submit" class="btn btn-primary mt-3"/>
</form>
{{/block}}

{{/extends}}