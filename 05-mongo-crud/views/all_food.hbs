{{#extends 'base'}}

{{#block "content"}}
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Calories</th>
            <th>Tags</th>
            <th></th>
        </tr>

    </thead>

    {{#each foodRecords }}
        <tr>
            <td>{{this._id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.calories}}</td>
            <td>{{this.tags}}</td>
            <td><a href="/food/{{this._id}}/edit" class="btn btn-primary btn-sm">Edit</a></td>
        </tr>
    {{/each}}