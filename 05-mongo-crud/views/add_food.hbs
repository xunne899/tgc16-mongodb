{{#extends "base"}}

{{#block "content"}}
<h1>Add new food</h1>
<form method="POST">
    <div>
        <label>Food Name:</label>
        <input type="text" class="form-control" id="name" name="foodName">
    </div>
    <div>
        <label>Calories</label>
        <input type="text" class="form-control" id="calories" name="calories">
    </div>
    <div class="row">
        <label class="col-1">Tags</label>
        <div class="col">

            {{!-- {{#each tags}}
            <input name="tags" class="form-check-input" 
                               type="checkbox"
                               value="{{this.value}}"/>
            <label class="form-check-label">{{this.name}}</label>
            {{/each}} --}}
            <div class="form-check form-check-inline">
                <input name="tags" class="form-check-input" type="checkbox" value="sweet"/>
                <label class="form-check-label">Sweet</label>
            </div>
         
            <div class="form-check form-check-inline">
                <input name="tags" class="form-check-input" type="checkbox" value="organic"/>
                <label class="form-check-label">Organic</label>
            </div>
       
            <div class="form-check form-check-inline">
                <input name="tags" class="form-check-input" type="checkbox" value="snack"/>
                <label class="form-check-label">Snack</label>
           </div>
          
            <div class="form-check form-check-inline">
                <input name="tags" class="form-check-input" type="checkbox" value="homecooked"/>
                <label class="form-check-label">Homecooked</label>
            </div>
        
        </div>
    </div>
    <input type="submit" value="Submit" class="btn btn-primary mt-3"/>
</form>
{{/block}}

{{/extends}}